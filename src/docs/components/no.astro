---
import clsx from 'clsx';

import XIcon from '~astro-icons/lucide/x';
---

<div class="flex items-center not-prose">
  <div
    class={clsx(
      'w-6 h-6 flex mr-3 items-center justify-center rounded-full text-white dark:text-black',
      'border border-red-600/20 bg-red-600 dark:bg-red-400',
      'ring-red-400/60 ring-2 ring-offset-1 ring-offset-body my-6',
    )}
  >
    <XIcon class="w-4 h-4" />
  </div>

  <slot />
</div>
