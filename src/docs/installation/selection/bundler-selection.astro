---
import AstroLogo from '~/icons/logos/astro-logo.svelte';
import NuxtLogo from '~/icons/logos/nuxt-logo.svelte';
import SolidStartLogo from '~/icons/logos/solid-logo.svelte';
import SvelteLogo from '~/icons/logos/svelte-logo.svelte';
import ViteLogo from '~/icons/logos/vite-logo.svelte';
import WebpackLogo from '~/icons/logos/webpack-logo.svelte';
import NoneIcon from '~icons/lucide/ban';

import Selections from './selections.astro';
---

<Selections
  basePath="/docs/player/getting-started/installation"
  type="bundler"
  label="Bundlers"
  param="bundler"
  options={[
    {
      label: 'Astro',
      Icon: AstroLogo,
      color: 'pink',
    },
    {
      label: 'SvelteKit',
      Icon: SvelteLogo,
      color: 'red',
      framework: 'svelte',
    },
    {
      label: 'Nuxt',
      Icon: NuxtLogo,
      color: 'green',
      framework: 'vue',
    },
    {
      label: 'SolidStart',
      Icon: SolidStartLogo,
      color: 'blue',
      framework: 'solid',
    },
    {
      label: 'Vite',
      Icon: ViteLogo,
      color: 'purple',
    },
    {
      label: 'Webpack',
      color: 'blue',
      Icon: WebpackLogo,
    },
    {
      label: 'None',
      color: 'orange',
      Icon: NoneIcon,
    },
  ]}
/>
